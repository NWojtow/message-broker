<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/message_broker</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.autocommit">true</property>
        <property name="hibernate.connection.passwd"></property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="broker.datasource.entities.UserDAO" />
        <mapping class="broker.datasource.entities.SubjectDAO" />
        <mapping class="broker.datasource.entities.MessageDAO" />
    </session-factory>

</hibernate-configuration>
